<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:id="@+id/choiceOfAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choiceOfAction" />


        <ImageButton
            android:id="@+id/buttonSettings"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="right"
            android:onClick="onSettings"
            android:background="@drawable/settings"
            tools:ignore="SpeakableTextPresentCheck" />
    </FrameLayout>

    <Button
        android:id="@+id/buttonGet"
        android:text="@string/buttonGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:onClick="onGetRequest"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPost"
        android:text="@string/buttonPost"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:onClick="onPostRequest"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPut"
        android:text="@string/buttonPut"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:onClick="onPutRequest"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDel"
        android:text="@string/buttonDel"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:onClick="onDelRequest"
        />
</LinearLayout>