<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.requestingPermission.RequestingPermissionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:id="@+id/scroll_permission_fragment"
            android:name="site.alexkononsol.controllerfortelegrambot.ui.fragments.PermissionScrollFragment"/>
        <fragment
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/button_permission_fragment"
            android:name="site.alexkononsol.controllerfortelegrambot.ui.fragments.PermissionButtonFragment"/>

    </LinearLayout>
</LinearLayout>

