<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingActivity">

    <include
        layout="@layout/toolbar_settings"
        android:id="@+id/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:paddingBottom="50dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/paddingSmall">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hostNameTitle" />

                <EditText

                    android:id="@+id/hostName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="25"
                    android:inputType="textAutoComplete"
                    android:paddingHorizontal="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonSettingsGetNameBot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buttonSettingsGetNameBot" />

                <TextView
                    android:id="@+id/nameBot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/paddingNormal" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/paddingSmall"
                android:text="@string/userAccountTitle"
                android:textSize="@dimen/subMenuTextSize" />

            <TextView
                android:id="@+id/authSettingsStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logoutButtonText" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/paddingNormal"
                android:paddingBottom="@dimen/paddingSmall"
                android:text="@string/settingsHelpName"
                android:textSize="@dimen/subMenuTextSize" />

            <CheckBox
                android:id="@+id/viewHelpOnStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onViewHelpOnStart"
                android:paddingBottom="@dimen/paddingNormal"
                android:text="@string/viewHelpOnStart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/paddingSmall"
                android:text="@string/nameTextSizeSettings"
                android:textSize="@dimen/smallTextSize" />

            <RadioGroup
                android:id="@+id/radioTextSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/paddingSmall">

                <RadioButton
                    android:id="@+id/textSizeSmallRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:onClick="onTextSizeButton"
                    android:text="@string/textSizeSmall"
                    android:textSize="@dimen/smallTextSize" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:onClick="onTextSizeButton"
                    android:text="@string/textSizeNormal"
                    android:textSize="@dimen/normalTextSize" />

                <RadioButton
                    android:id="@+id/textSizeLargeRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:onClick="onTextSizeButton"
                    android:text="@string/textSizeLarge"
                    android:textSize="@dimen/bigTextSize" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/paddingNormal">

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/info"
                    android:contentDescription="@string/settingsHelpButton"
                    android:onClick="onSettingsHelpInfo"
                    android:paddingBottom="@dimen/paddingNormal"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/paddingSmall"
                    android:text="@string/settingsHelpButton"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/paddingSmall"
                android:text="@string/backupText"
                android:textSize="@dimen/subMenuTextSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/paddingSmall">

                <TextView
                    android:id="@+id/backup_file_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nameBackupTitle" />

                <EditText
                    android:id="@+id/backup_file_name_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="25"
                    android:inputType="textAutoComplete"
                    android:paddingHorizontal="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/paddingSmall">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:background="@drawable/export"
                    android:contentDescription="@string/backupSaveText"
                    android:onClick="onSaveBackup" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/paddingNormal"
                    android:text="@string/backupSaveText"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/paddingNormal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:background="@drawable/load_backup"
                    android:contentDescription="@string/backupLoadText"
                    android:onClick="onShowFileChooser" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/paddingNormal"
                    android:text="@string/backupLoadText" />
            </LinearLayout>
            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_about"
                android:name="site.alexkononsol.controllerfortelegrambot.ui.fragments.AboutProgramFragment"/>
            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_logging"
                android:name="site.alexkononsol.controllerfortelegrambot.ui.fragments.LoggingSettingsFragment"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>